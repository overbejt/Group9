<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane id="login-parent" prefHeight="547.0" prefWidth="600.0" styleClass="login-borderpane" stylesheets="@application.css" xmlns="http://javafx.com/javafx/9" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.Controller">
  
   <center>
      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
         <children>
            <VBox alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="525.0" prefWidth="468.0" style="-fx-background-color: white;" stylesheets="@application.css">
               <children>
                  <HBox alignment="TOP_CENTER">
                     <VBox.margin>
                        <Insets bottom="3.0" left="3.0" right="3.0" top="3.0" />
                     </VBox.margin>
                     <children>
                        <ImageView fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../Assets/128x128.png" />
                           </image>
                           <HBox.margin>
                              <Insets bottom="50.0" />
                           </HBox.margin>
                        </ImageView>
                     </children>
                  </HBox>
                  <TextField fx:id="usrNameField" focusTraversable="false" pickOnBounds="false" promptText="User name" style="-fx-background-color: white;">
                     <VBox.margin>
                        <Insets bottom="3.0" left="3.0" right="3.0" top="3.0" />
                     </VBox.margin>
                  </TextField>
                  <PasswordField focusTraversable="false" promptText="Password" style="-fx-background-color: white;">
                     <VBox.margin>
                        <Insets bottom="3.0" left="3.0" right="3.0" top="3.0" />
                     </VBox.margin>
                  </PasswordField>
                  <HBox alignment="TOP_RIGHT" prefHeight="100.0" prefWidth="200.0">
                     <children>
                        <Button fx:id="logInBtn" mnemonicParsing="false" style="-fx-background-color: rgb(37, 116, 169);" text="Login" onAction="#loginBtnClicked" />
                     </children>
                  </HBox>
               </children>
               <padding>
                  <Insets bottom="80.0" left="80.0" right="80.0" top="80.0" />
               </padding>
            </VBox>
         </children>
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
         <BorderPane.margin>
            <Insets />
         </BorderPane.margin>
      </HBox>
   </center>
</BorderPane>
